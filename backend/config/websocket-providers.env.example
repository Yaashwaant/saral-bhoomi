# WebSocket Provider Configuration Example
# Copy this file to .env and update with your actual API keys

# Primary Polygon Amoy RPC (Official)
BLOCKCHAIN_RPC_URL=https://rpc-amoy.polygon.technology
BLOCKCHAIN_WS_URL=wss://rpc-amoy.polygon.technology

# Alchemy RPC (Recommended for production)
# Get your API key from: https://www.alchemy.com/
ALCHEMY_RPC_URL=https://polygon-amoy.g.alchemy.com/v2/YOUR_ALCHEMY_API_KEY
ALCHEMY_WS_URL=wss://polygon-amoy.g.alchemy.com/v2/YOUR_ALCHEMY_API_KEY

# Infura RPC (Alternative provider)
# Get your project ID from: https://infura.io/
INFURA_RPC_URL=https://polygon-amoy.infura.io/v3/YOUR_INFURA_PROJECT_ID
INFURA_WS_URL=wss://polygon-amoy.infura.io/ws/v3/YOUR_INFURA_PROJECT_ID

# QuickNode RPC (Alternative provider)
# Get your endpoint from: https://www.quicknode.com/
QUICKNODE_RPC_URL=https://your-endpoint.polygon-amoy.quiknode.pro/YOUR_API_KEY/
QUICKNODE_WS_URL=wss://your-endpoint.polygon-amoy.quiknode.pro/YOUR_API_KEY/

# WebSocket Connection Settings
WEBSOCKET_MAX_RETRIES=3
WEBSOCKET_RETRY_DELAY=1000
WEBSOCKET_MAX_RETRY_DELAY=30000
WEBSOCKET_HEALTH_CHECK_INTERVAL=30000
